{
  "name": "tailwind-config-extension",
  "version": "1.0.0",
  "license" : "MIT",
  "description": "JavaScript example starter project",
  "scripts": {
    "build": "yarn run copy & yarn run styles",
    "start": "yarn run copy:dev & yarn run styles:dev & yarn run serve:dev",
    "copy": "npx cpx ./src/*.html dist",
    "copy:dev": "npx cpx ./src/*.html dist --watch",
    "styles": "postcss src/styles.css -o dist/styles.css",
    "styles:dev": "postcss src/styles.css -o dist/styles.css --watch",
    "serve:dev": "npx live-server ./dist --open --watch --no-css-inject"
  },
  "devDependencies": {
    "@mertasan/tailwindcss-variables": "^1.4.1",
    "autoprefixer": "^10.2.5",
    "postcss": "^8.3.5",
    "postcss-cli": "^9.0.0",
    "@abds/styles": "3.3.0",
    "postcss-import": "^14.1.0",
    "postcss-preset-env": "^7.4.3",
    "tailwindcss": "^3.0.23",
    "@tailwindcss/typography": "^0.5.2",
    "tailwind-safelist-generator": "0.1.3"
  },
  "browserslist": [
    "last 2 versions",
    "not ie <= 11",
    "not dead"
  ]
}
