{
  "name": "tailwind-config-extension",
  "version": "1.0.0",
  "license": "MIT",
  "description": "Apollo tailwind config extension",
  "scripts": {
    "build": "yarn copy & yarn styles && yarn serve",
    "start": "yarn build - --watch && yarn serve:dev",
    "copy": "npx cpx ./src/*.html dist",
    "styles": "postcss src/styles.css -o dist/styles.css",
    "serve": "npx live-server dist --watch --no-css-inject --port=3333",
    "serve:dev": "npx live-server ./dist --open --watch --no-css-inject"
  },
  "devDependencies": {
    "postcss": "^8.3.5",
    "postcss-cli": "^9.0.0",
    "@abds/styles": "3.3.0",
    "tailwindcss": "^3.0.23"
  },
  "browserslist": ["last 2 versions", "not ie <= 11", "not dead"]
}
